{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.details'|trans }}
{% endblock %}

{% block body %}
    <body>
        <div class="container">
            <div class="row">
                <h1>{{ 'title.details'|trans }}</h1>
                {% if record is defined and record|length %}
                    <dl class="dl-horizontal">
                        <dt>{{ 'label.id'|trans }}</dt>
                        <dd>{{ record.id }}</dd>
                        <dt>{{ 'label.alias'|trans }}</dt>
                        <dd>{{ record.author.alias }}</dd>
                        <dt>{{ 'label.title'|trans }}</dt>
                        <dd>{{ record.title }}</dd>
                        <dt>{{ 'label.genre_name'|trans }}</dt>
                        <dd>{{ record.genre.genreName }}</dd>
                        <dt>{{ 'label.stock'|trans }}</dt>
                        <dd>{{ record.inStock }}</dd>
                        <dt>{{ 'label.actions'|trans }}</dt>
                        <dd>
                            <a class="btn btn-outline-info me-2 mt-2" href="{{ url('record_edit', {id: record.id}) }}" title="{{ 'action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>
                            <a class="btn btn-outline-danger me-2 mt-2" href="{{ url('record_delete', {id: record.id}) }}" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                            <a class="btn btn-outline-dark mt-2" href="{{ url('ebay_records')}}" title="{{ 'action.return'|trans }}">
                                {{ 'action.return'|trans }}
                            </a>
                        </dd>
                    </dl>
                {% else %}
                    {% include 'default/_single_alert_message.html.twig' with {
                        type: 'warning',
                        message: 'message.record_not_found'|trans
                    } %}
                {% endif %}
            </div>
        </div>
    </body>

{% endblock %}

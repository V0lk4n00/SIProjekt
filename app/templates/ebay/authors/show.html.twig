{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.details'|trans }}
{% endblock %}

{% block body %}
    <body>
        <div class="container">
            <div class="row">
                <h1>{{ 'title.details'|trans }}</h1>
                {% if author is defined and author|length %}
                    <dl class="dl-horizontal">
                        <dt>{{ 'label.id'|trans }}</dt>
                        <dd>{{ author.id }}</dd>
                        <dt>{{ 'label.alias'|trans }}</dt>
                        <dd>{{  author.alias }}</dd>
                        <dt>{{ 'label.name'|trans }}</dt>
                        <dd>{{ author.name }}</dd>
                        <dt>{{ 'label.surname'|trans }}</dt>
                        <dd>{{ author.surname }}</dd>
                        <dt>{{ 'label.actions'|trans }}</dt>
                        <dd>
                            <a class="btn btn-outline-info me-2 mt-2" href="{{ url('author_edit', {id: author.id}) }}" title="{{ 'action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>
                            <a class="btn btn-outline-danger me-2 mt-2" href="{{ url('author_delete', {id: author.id}) }}" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                            <a class="btn btn-outline-dark mt-2" href="{{ url('ebay_authors')}}" title="{{ 'action.return'|trans }}">
                                {{ 'action.return'|trans }}
                            </a>
                        </dd>
                    </dl>
                {% else %}
                    {% include 'default/_single_alert_message.html.twig' with {
                        type: 'warning',
                        message: 'message.record_not_found'|trans
                    } %}
                {% endif %}
            </div>
        </div>
    </body>

{% endblock %}
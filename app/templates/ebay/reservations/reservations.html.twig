{% extends 'base.html.twig' %}

{% block title %}
    Reservations
{% endblock %}

{% block body %}
    <body>
    <div class="container">
        <div class="row">
            <h1>Reservations</h1>
            {% if pagination is defined and pagination.items|length %}
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th class="text-center" style="width: 5%">{{ knp_pagination_sortable(pagination, 'ID', 'reservation.id') }}</th>
                        <th style="width: 35%">{{ knp_pagination_sortable(pagination, 'Email', 'reservation.email') }}</th>
                        <th style="width: 20%">{{ knp_pagination_sortable(pagination, 'Nick', 'reservation.nick') }}</th>
                        <th style="width: 20%">{{ knp_pagination_sortable(pagination, 'Content', 'reservation.content') }}</th>
                        <th class="text-center" style="width: 20%">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for reservation in pagination.items %}
                        <tr>
                            <td>{{ reservation.id }}</td>
                            <td>{{ reservation.email }}</td>
                            <td>{{ reservation.nick }}</td>
                            <td>{{ reservation.content }}</td>
                            <td class="text-center">
                                <a class="btn btn-outline-primary me-2" href="{{ url('ebay_reservations_show', {id: reservation.id}) }}" title="View">
                                    View
                                </a>
                                <a class="btn btn-outline-danger" href="{{ url('reservation_delete', {id: reservation.id}) }}" title="Decline">
                                    Decline
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                {% include 'default/_single_alert_message.html.twig' with {
                    type: 'warning',
                    message: 'There are no reservations in the database'
                } %}
            {% endif %}
        </div>

        <div class="row">
            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
    </body>

{% endblock %}

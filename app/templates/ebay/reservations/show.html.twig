{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.details'|trans }}
{% endblock %}

{% block body %}
    <body>
        <div class="container">
            <div class="row">
                <h1>{{ 'title.details'|trans }}</h1>
                {% if reservation is defined and reservation|length %}
                    <dl class="dl-horizontal">
                        <dt>{{ 'label.id'|trans }}</dt>
                        <dd>{{ reservation.id }}</dd>
                        <dt>{{ 'label.email'|trans }}</dt>
                        <dd>{{  reservation.email }}</dd>
                        <dt>{{ 'label.nick'|trans }}</dt>
                        <dd>{{ reservation.nick }}</dd>
                        <dt>{{ 'label.content'|trans }}</dt>
                        <dd>{{ reservation.content }}</dd>
                        <dt>{{ 'label.actions'|trans }}</dt>
                        <dd>
                            <a class="btn btn-outline-success me-2 mt-2" href="{{ url('reservation_delete', {id: reservation.id}) }}" title="{{ 'action.accept'|trans }}">
                                {{ 'action.accept'|trans }}
                            </a>
                            <a class="btn btn-outline-danger me-2 mt-2" href="{{ url('reservation_delete', {id: reservation.id}) }}" title="{{ 'action.decline'|trans }}">
                                {{ 'action.decline'|trans }}
                            </a>
                            <a class="btn btn-outline-dark mt-2" href="{{ url('ebay_reservations')}}" title="{{ 'action.return'|trans }}">
                                {{ 'action.return'|trans }}
                            </a>
                        </dd>
                    </dl>
                {% else %}
                    {% include 'default/_single_alert_message.html.twig' with {
                        type: 'warning',
                        message: 'message.record_not_found'|trans
                    } %}
                {% endif %}
            </div>
        </div>
    </body>

{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}
    Users
{% endblock %}

{% block body %}
    <body>
    <div class="container">
        <div class="row">
            <h1>Users</h1>
            {% if pagination is defined and pagination.items|length %}
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th class="text-center" style="width: 5%">{{ knp_pagination_sortable(pagination, 'ID', 'user.id') }}</th>
                        <th style="width: 40%">{{ knp_pagination_sortable(pagination, 'Email', 'user.email') }}</th>
                        <th style="width: 40%">{{ knp_pagination_sortable(pagination, 'Password', 'user.password') }}</th>
                        <th class="text-center" style="width: 15%">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in pagination.items %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.password }}</td>
                            <td class="text-center">
                                <a class="btn btn-outline-info me-2" href="{{ url('user_edit', {id: user.id}) }}" title="Edit">
                                    Edit
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            {% else %}
                {% include 'default/_single_alert_message.html.twig' with {
                    type: 'warning',
                    message: 'There are no users in the database'
                } %}
            {% endif %}
        </div>

        <div class="row">
            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
    </body>

{% endblock %}

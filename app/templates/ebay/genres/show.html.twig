{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.details'|trans }}
{% endblock %}

{% block body %}
    <body>
    <div class="container">
        <div class="row">
            <h1>{{ 'title.details'|trans }}</h1>
            {% if genre is defined and genre|length %}
                <dl class="dl-horizontal">
                    <dt>{{ 'label.id'|trans }}</dt>
                    <dd>{{ genre.id }}</dd>
                    <dt>{{ 'label.genre_name'|trans }}</dt>
                    <dd>{{ genre.genreName }}</dd>
                    <dt>{{ 'label.actions'|trans }}</dt>
                    <dd>
                        <a class="btn btn-outline-info me-2 mt-2" href="{{ url('genre_edit', {id: genre.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                        <a class="btn btn-outline-danger me-2 mt-2" href="{{ url('genre_delete', {id: genre.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                        <a class="btn btn-outline-dark mt-2" href="{{ url('ebay_genres')}}" title="{{ 'action.return'|trans }}">
                            {{ 'action.return'|trans }}
                        </a>
                    </dd>
                </dl>
            {% else %}
                {% include 'default/_single_alert_message.html.twig' with {
                    type: 'warning',
                    message: 'message.record_not_found'|trans
                } %}
            {% endif %}
        </div>
    </div>
    </body>

{% endblock %}

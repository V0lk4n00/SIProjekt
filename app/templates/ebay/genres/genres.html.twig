{% extends 'base.html.twig' %}

{% block title %}
    Genres
{% endblock %}

{% block body %}
    <body>
        <div class="container">
            <div class="row">
                <h1>Genres</h1>
                {% if pagination is defined and pagination.items|length %}
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th class="text-center" style="width: 5%">{{ knp_pagination_sortable(pagination, 'ID', 'genre.id') }}</th>
                            <th style="width: 75%">{{ knp_pagination_sortable(pagination, 'Name', 'genre.genreName') }}</th>
                            <th class="text-center" style="width: 20%">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for genre in pagination.items %}
                            <tr>
                                <td>{{ genre.id }}</td>
                                <td>{{ genre.genreName }}</td>
                                <td class="text-center">
                                    <a class="btn btn-outline-primary me-2" href="{{ url('ebay_genres_show', {id: genre.id}) }}" title="View">
                                        View
                                    </a>
                                    <a class="btn btn-outline-info me-2" href="{{ url('genre_edit', {id: genre.id}) }}" title="Edit">
                                        Edit
                                    </a>
                                    <a class="btn btn-outline-danger" href="{{ url('genre_delete', {id: genre.id}) }}" title="Delete">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                {% else %}
                    {% include 'default/_single_alert_message.html.twig' with {
                        type: 'warning',
                        message: 'There are no genres in the database'
                    } %}
                {% endif %}
            </div>

            <div class="row">
                <h4>Don't see a genre in the database?</h4>
                <div>
                    <a class="btn btn-outline-success mb-3" style="width: 100%" href="{{ url('genre_create')}}" title="Create">
                    Add genre
                    </a>
                </div>

                <div class="navigation text-center">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </body>

{% endblock %}
